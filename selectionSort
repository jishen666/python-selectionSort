def swap(lyst,i,j):
    """Exchanges thi items at positions i and j."""
    # You could say lyst[i],lyst[j] = lyst[j]„ÄÅlyst[i]
    # but the following code shows what is really going on
    temp = lyst[i]
    lyst[i] = lyst[j]
    lyst[j] = temp
    
    
    
#Using while loops
def selectionsort(lyst):
    i = 0
    while i < len(lyst) - 1:             #Do n - 1 searches
        minIndex = i                      #for the smallest
        j = i + 1
        while j < len(lyst):             #Start a search
            if lyst[j] < lyst[minIndex]:
                minIndex = j
            j += 1
        if minIndex != i:
            swap(lyst,minIndex,i)
        i += 1
        
 # Using for loops but changing at last
def selectionsort1(lyst):
    for i in range(0,len(lyst)):
        minIndex = i
        for j in range(i+1,len(lyst)):
            if lyst[j] < lyst[minIndex]:
                minIndex = j
        swap(lyst, minIndex, i)
 
 # Using for loops but changing immediately
def bubbleSort1(lyst):
    n = len(lyst)
    for i in range(0, n):
        for j in range(i + 1, n):
            if lyst[i] > lyst[j]:
                swap(lyst, i, j)
                
